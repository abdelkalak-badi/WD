<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="projet_WD" transaction-type="RESOURCE_LOCAL">
		<class>com.WD.entities.Autre</class>
		<class>com.WD.entities.Cartecin</class>
		<class>com.WD.entities.Center</class>
		<class>com.WD.entities.Object</class>
		<class>com.WD.entities.Passeport</class>
		<class>com.WD.entities.Personne</class>
		<class>com.WD.entities.Reclamation</class>
		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/wd"/>
			<property name="javax.persistence.jdbc.user" value="root"/>
			<property name="javax.persistence.jdbc.password" value=""/>
			<property name="eclipselink.allow-zero-id" value="true"/>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
		</properties>
	</persistence-unit>
</persistence>
